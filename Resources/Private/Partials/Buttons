<script>
$(document).ready(function(){
 
  $("#zoomOut").click(function(){
  $("#c930").css("zoom", 0.8);
    $("#c930").css("transform","scale(0.8) translate(-5%,-12%)");
  });
 $("#zoomNormal").click(function(){
      $("#c930").css("zoom",1.0);
    $("#c930").css("transform","scale(1) translate(0,0)");
  });
 $("#zoomIn").click(function(){
  $("#c930").css("zoom", 1.4);
    $("#c930").css("transform","scale(1.4) translate(14%,15%)");
  });
$("#zoomExtra").click(function(){
       $("#c930").css("zoom",1.6);
    $("#c930").css("transform","scale(1.6) translate(22%,22%)");
  });


});
</script>